<div class="container">
  <div class="row">
     <div class="col-md-3">
        <%= render 'books/list', book: @book, user: @user %>
     </div>
     <div class="col-lg-8">
     <table class="table table-striped">
        <thead>
          <h2>Books</2>
          <tr>
          <th colspan="3"></th>
          <th>Title</th>
          <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
          <tr>
          <td><%= book.user.image %></td>
          <td><%= book.title %></td>
          <td><%= book.opinion %></td>
          </tr>
        <% end %>
        </tbody>
     </table>
     </div>
  </div>
 </div>