<div class="container">
  <div class="row">
     <div class="col-lg-4">
        <%= render 'books/list', books: @books %>
     </div>
     <div class="col-lg-8">
     <table class="table table-striped">
        <thead>
          <tr>
          <th colspan="3"></th>
          <th>Title</th>
          <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
        <% @book.each do |book| %>
          <tr>
          <td><%= book.user.image %></td>
          <td><%= @book.title %></td>
          <td><%= @book.opinion %></td>
        <% end %>
        </tbody>
     </table>
     </div>
  </div>
 </div>