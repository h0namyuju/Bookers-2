<p id="notice"></p>
<div class="container px-5 sm-0">

<% if @book.errors.any? %>
    <div id="error"><h3><%= @book.errors.count %> errors prohibited this book from being saved:
        </h3>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    </div>
 <% end %>

<div class="row">
<div class="col-md-3">
    <%= render 'list', books: @books, book: @book, user: @user %>
  </div>


<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
       <tr>
         <th></th>
         <th>TItle</th>
         <th>Opinion</th>
       <tr>
    </thead>

    <tbody>
        <% @books.each do |books| %>
        <tr>
          <td><%= image_tag books.user.get_profile_image(80,80) %></td>
          <td><%= link_to books.title, book_path(books.id) %></td>
          <td><%= books.opinion %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>