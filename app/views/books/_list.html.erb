

<div class="col-md-3"></div>

<table>
 <thead>
   <h2>User info</h2>
    <tr>
       <th>name</th>
       <th>introduction</th>
    </tr>
 </thead>

 <tbody>
 <% @books.each do |book| %>
   <tr>
   <th><%= book.user.image %></th>
   <th><%= book.user.name %></th>
 <% end %>
 </tbody>
 </table>
 <%= link_to"edit" %>


<h2>New book</h2>
<%= form_with model: @book, url: books_path, method: :post do |f| %>
 <div class="field">
  <%= f.label :Title %>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <%= f.label :Opinion %>
  <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4" %>
  </div>

<% end %>
