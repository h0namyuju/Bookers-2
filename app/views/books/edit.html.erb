 <p id="notice">

 <div class="container">
 <div class="row">
 <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>Editing Book</h1>

 <%= form_with model: @book do |f| %>

   <div class= "field">
    <%= f.label :Title %></br>
    <%= f.text_field :title %>
   </div>

   <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :opinion %>
   </div>

   <div class="field">
     <%= f.submit 'Update Book', class:"btn btn-success" %>
   </div>
 <% end %>
   <%= link_to "Show", book_path(@book.id) %>|
   <%= link_to "Back", book_path %>

</div>
</div>
</div>
